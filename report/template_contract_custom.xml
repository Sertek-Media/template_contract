<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>
		<template id="report_qweb_contract_repeat">
			<t t-call="report.html_container">
				<div class = "header">
					<t t-name="report.external_layout_header">
					   <div class="header">
					        <div class="row">
					            <div class="col-xs-3">
					                <img t-if="user.company_id.logo" t-att-src="'data:image/png;base64,%s' % user.company_id.logo" style="max-height: 45px;"/>
					            </div>
					        </div>
					    </div>
					</t>
				</div>
				<div class="oe_structure"/>
				<t t-foreach="docs" t-as="o">
			        <div class="page">
		            	<p t-raw="o.report_html"></p>
					</div>				
				</t>
				<div class = "footer">
					<t t-name="report.external_layout_footer">
					    <div class="footer">
					        <div class="text-center" style="border-top: 1px solid black;">
					            <ul t-if="not user.company_id.custom_footer" class="list-inline">
					                <li t-if="user.company_id.phone">Phone: <span t-field="user.company_id.phone"/></li>
					
					                <li t-if="user.company_id.fax and user.company_id.phone">&amp;bull;</li>
					                <li t-if="user.company_id.fax">Fax: <span t-field="user.company_id.fax"/></li>
					
					                <li t-if="user.company_id.email">&amp;bull;</li>
					                <li t-if="user.company_id.email">Email: <span t-field="user.company_id.email"/></li>
					
					                <li t-if="user.company_id.website">&amp;bull;</li>
					                <li t-if="user.company_id.website">Website: <span t-field="user.company_id.website"/></li>
					            </ul>
					
					            <t t-if="user.company_id.custom_footer">
					                <span t-raw="user.company_id.rml_footer"/>
					            </t>
					
					            <ul class="list-inline">
					                <li>Page:</li>
					                <li><span class="page"/></li>
					                <li>/</li>
					                <li><span class="topage"/></li>
					            </ul>
					        </div>
					    </div>      
					</t>

				</div>
			</t>
		</template>
	</data>
</openerp>
